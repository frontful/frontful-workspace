{
  "name": "frontful-workspace",
  "version": "4.0.0",
  "private": true,
  "description": "Frontful workspace",
  "scripts": {
    "clean": "frontful-tools clean \"{templates/*,projects/*,platforms/*/packages/*,platforms/*}/\" && frontful-tools clean",
    "install": "frontful-tools install",
    "tools": "frontful-tools"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/frontful/frontful-workspace.git"
  },
  "license": "MIT",
  "contributors": [
    "Arturs Girons <arturs.girons@gmail.com> (https://artursgirons.info/)"
  ],
  "workspaces": {
    "packages": [
      "platforms/*/packages/*",
      "platforms/*",
      "projects/*",
      "templates/template-project",
      "templates/template-project-agnostic"
    ]
  },
  "dependencies": {
    "frontful-tools": "4.x"
  }
}
